@page
@model IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Downloads";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Below is all available data listed</p>
</div>

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Season</th>
            <th scope="col">Episode</th>
            <th scope="col">Title</th>
            <th scope="col">Last modified</th>
            <th scope="col">Downloadlink</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var season in Model.PokemonTVResults)
        {
            @foreach (var episode in season.media)
            {
                <tr>
                    <th scope="row">@episode.season</th>
                    <th scope="row">@episode.episode</th>
                    <td>@episode.title</td>
                    <td>@episode.last_modified</td>
                    <td class="text"><span><a href=@episode.stream_url>Direct Link to File</a></span></td>
                    <td>
                        <button name="button" style="background-color: transparent; color: yellow" value=@episode.stream_url asp-action="StartDownload">Download</button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
